{
  "name": "node-koa-api",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "mocha": "mocha --exit",
    "lint": "npm run prettier && eslint --ext js src test",
    "prettier": "prettier --write './src/**/*.js' './test/**/*.js'",
    "start": "node ./src/server/index.js",
    "test": "npm run lint && npm run mocha"
  },
  "lint-staged": {
    "*.{json,css,md}": ["npm run prettier"],
    "*.{js}": ["npm run lint", "git add"]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "lint-staged && npm test"
    }
  },
  "keywords": [],
  "author": "Oleksandr",
  "license": "ISC",
  "devDependencies": {
    "chai": "4.1.2",
    "chai-http": "3.0.0",
    "eslint": "4.16.0",
    "eslint-config-airbnb-base": "12.1.0",
    "eslint-config-prettier": "2.9.0",
    "eslint-plugin-import": "2.8.0",
    "eslint-plugin-prettier": "2.6.0",
    "husky": "0.15.0-rc.3",
    "lint-staged": "6.1.0",
    "mocha": "5.0.0",
    "prettier": "1.10.2"
  },
  "dependencies": {
    "chalk": "2.3.0",
    "http-status-codes": "1.3.0",
    "knex": "0.14.2",
    "koa": "2.4.1",
    "koa-bodyparser": "4.2.0",
    "koa-logger": "3.1.0",
    "koa-router": "7.3.0",
    "pg": "7.4.1"
  }
}
